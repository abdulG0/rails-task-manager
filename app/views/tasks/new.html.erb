<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path, method: :post, class: "container" do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :completed %>
    <%= form.check_box :completed, class: "form-check-input" %>
  </div>
  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
